{
  "compilerOptions": {
    "outDir": "./dist",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ES2015",
    "pretty": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["./src/**/*", "decs.d.ts", "./test/**/*"]
}
